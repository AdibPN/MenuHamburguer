<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hamburgao.Views.Vestibulinho"
             Title="Vestibulinho"
             BackgroundColor="#3E474C">
    
    
    <ContentPage.Content>
        
        <StackLayout VerticalOptions="CenterAndExpand" Padding="10">
            <Label Text="FIQUE ATENTO ÀS DATAS, ACESSE O SITE:"
                   HorizontalTextAlignment="Center" 
                   TextColor="White"
                   FontAttributes="Bold" Margin="10" FontSize="Title" />

            <Button Text="https://www.vestibulinhoetec.com.br/home/"
                    Style="{StaticResource botaoVermelho}" Clicked="Button_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>