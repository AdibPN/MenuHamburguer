<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hamburgao.Views.VerComponente"
             BackgroundColor="White"
             Title="Detalhes do componente">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <ScrollView>
            <StackLayout Padding="20">

                    <Label Text="{Binding Nome}" HorizontalTextAlignment="Center" FontAttributes="Bold"
                   Margin="0, 0, 0, 30" TextColor="Red" FontSize="Title" />

                    <Label Text="Atribuições e responsabilidades" HorizontalTextAlignment="Center"
                   TextColor="Black" FontSize="Large" />

                    <Label Text="{Binding AtribuicoesResponsabilidades}"
                           Margin="0, 0, 0, 30" FontSize="Medium" HorizontalTextAlignment="Center" />

                    <Label Text="Valores e atitudes" HorizontalTextAlignment="Center"
                   TextColor="Black" FontSize="Large" />

                    <Label Text="{Binding ValoresAtitudes}"
                           FontSize="Medium" HorizontalTextAlignment="Center" />

                </StackLayout>
        </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>